<form action="/users" method="POST">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label>Email: 
		<input type="text" value="<%= @user.email %>" name="user[email]" class="form-control">
	</label><br>

	<label>Username: 
		<input type="text" value="<%= @user.username %>" name="user[username]" class="form-control">
	</label><br>

	<label>Password: 
		<input type="password" name="user[password]" class="form-control">
	</label><br>

	<input type="submit" value="Create User" class="btn btn-larg btn-primary">
</form>