
<form action="/users" method="POST">
	<input type="hidden" 
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>">

	<input type="text" 
				 value="<%= @user.email %>" 
				 name="user[email]" 
				 class="signup-input form-control"
				 placeholder="Email">

	<input type="text" 
				 value="<%= @user.username %>" 
				 name="user[username]" 
				 class="form-control signup-input"
				 placeholder="Username">

	<input type="password" 
				 name="user[password]" 
				 class="form-control signup-input"
				 placeholder="Password">

	<input type="submit" 
				 value="Create My Account" 
				 class="btn btn-larg btn-primary signup-input">
</form>