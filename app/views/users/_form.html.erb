
<form action="/users" method="POST">
	<input type="hidden" 
				 name="authenticity_token" 
				 value="<%= form_authenticity_token %>">

	<input type="text" 
				 value="<%= @user.email %>" 
				 name="user[email]" 
				 class="form-control signup-input"
				 placeholder="Email">
	<br>

	<input type="text" 
				 value="<%= @user.username %>" 
				 name="user[username]" 
				 class="form-control signup-input"
				 placeholder="Username">
	<br>

	<input type="password" 
				 name="user[password]" 
				 class="form-control signup-input"
				 placeholder="Password">
	<br>

	<input type="submit" 
				 value="Create Account" 
				 class="btn btn-larg btn-primary">
</form>