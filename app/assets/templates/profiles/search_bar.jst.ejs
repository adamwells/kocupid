<h3>Find me:</h3>

<form class="search-form">
	<select name="style" class="form-control form-group">
		<option value="" disabled selected>Style</option>
		<option value="Boxer">Boxer</option>
		<option value="Wrestler">Wrestler</option>
		<option value="MMA Fighter">MMA Fighter</option>
		<option value="Other">Other</option>
		<option value="">Any</option>
	</select>

	<select name="gender" class="form-control form-group">
		<option value="" disabled selected>Gender</option>
		<option value="Male">Men</option>
		<option value="Female">Women</option>
		<option value="Other">Other</option>
		<option value="">Any</option>
	</select>

	<select name="weight_class" class="form-control form-group">
		<option value="" disabled selected>Weight Class</option>
		<option value="Featherweight">Featherweight</option>
		<option value="Lightweight">Lightweight</option>
		<option value="Middleweight">Middleweight</option>
		<option value="Heavyweight">Heavyweight</option>
		<option value="">Any</option>
	</select>

	<select name="body_type" class="form-control form-group">
		<option value="" disabled selected>Body Type</option>
		<option value="Tank">Tank</option>
		<option value="Flimsy">Flimsy</option>
		<option value="Built">Built</option>
		<option value="Stacked">Stacked</option>
		<option value="Jacked">Jacked</option>
		<option value="Yoked">Yoked</option>
		<option value="">Any</option>
	</select>
	
	<div class="input-group">
		<input type="text" class="form-control username-input" name="username" placeholder="Username">
		<span class="input-group-btn">
			<button class="search btn btn-default" type="button">GO</button>
		</span>
	</div>	
</form>

<script>
	  $(function() {	
	    $( ".username-input" ).autocomplete({
	      source: <%= usernames %>
	    });
  	});
</script>