<div class="page-content">
	<div class="actions">
		<div class="save">
			<span class="save-profile-button glyphicon glyphicon-floppy-disk"></span>
			<h5>Save Profile</h5>
		</div>
	</div>
	

	<div class="header-info clearfix">
		<img class="profile-photo" src="<%= profile.escape('photo_url') %>">

		<%= JST['profiles/_basic_info_form']({ profile: profile }) %>
	</div>

	<hr class="header-divider">

	<div class="about-me">
	<h4 class="profile-header">About me</h4>
		<%= JST['profiles/_about_me_form']({ profile: profile }) %>
	</div>

	<hr>

	<div class="features">
	<h4 class="profile-header">Features</h4>
		<ul class="profile-features profile-list list-group">
			<li class="height list-group-item">Height: <%= profile.escape('height') %></li>
			<li class="weight list-group-item">Weight: <%= profile.escape('weight') %></li>
			<li class="body_type list-group-item">Body Type: <%= profile.escape('body_type') %></li>
			<li class="weight_class list-group-item">Weight Class: <%= profile.escape('weight_class') %></li>
		</ul>
	</div>

	<%= JST['profiles/_looking_for']({ profile: profile }) %>
</div>